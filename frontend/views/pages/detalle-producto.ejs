<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= producto.nombre %> | JESSKA</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <%- include('../partials/recaptcha-script') %>

  <!-- Iconos -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <!-- CSS personalizado -->
    <link rel="stylesheet" href="/css/catalogo.css">
    <link rel="stylesheet" href="/css/style.landing.css">
</head>

<body>
  <!-- Header -->
  <header>
    <nav class="navbar navbar-expand-lg fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">JESSKA</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mx-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/catalogo">Catalogo</a>
            </li>
          </ul>
          <div class="d-flex align-items-center">
            <a href="/carrito" class="cart-icon">
              <img src="/img/carrito-compras.svg" alt="Carrito">
            </a>
            <% if (typeof usuario !=='undefined' && usuario) { %>
              <div class="d-flex align-items-center gap-2 ms-3">
                <a href="/perfil" class="user-profile-link">Hola, <strong>
                    <%= usuario.nombre || usuario.email %>
                  </strong></a>
                <form method="post" action="/logout" class="m-0">
                  <button type="submit" class="btn-profile">Cerrar sesión</button>
                </form>
              </div>
              <% } else { %>
                <button type="button" class="btn-login ms-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                  Iniciar Sesión
                </button>
                <% } %>
          </div>
        </div>
      </div>
    </nav>
  </header>
  <!-- Contenido principal -->
  <main class="container mt-5 pt-5">
    <div class="row g-5">
      <!-- Imagen -->
      <div class="col-md-6 text-center">
<img src="<%= Array.isArray(producto.imagenUrl) ? (producto.imagenUrl.length>0 ? producto.imagenUrl[0] : '/img/placeholder.webp') : (producto.imagenUrl || '/img/placeholder.webp') %>"             alt="<%= producto.nombre %>"
             class="img-fluid rounded shadow-sm">
      </div>

      <!-- Información del producto -->
      <div class="col-md-6">
        <h2 class="fw-bold"><%= producto.nombre %></h2>
        
        <!-- Precio -->
        <p class="fs-3 text-primary fw-semibold mb-1">
          $<%= producto.variante && producto.variante[0] ? producto.variante[0].precio.toLocaleString('es-CO') : 'N/A' %>
        </p>
        
        <!-- Descripción -->
        <p class="text-muted"><%= producto.descripcion || 'Sin descripción disponible' %></p>

        <!-- Stock -->
        <% if (producto.variante && producto.variante[0]) { %>
          <p>En stock: <strong><%= producto.variante[0].stock %></strong></p>
        <% } %>

        <!-- Color -->
        <% if (producto.variante && producto.variante[0] && producto.variante[0].color) { %>
          <div class="mb-3">
            <label class="form-label fw-semibold">Color</label>
            <div class="d-flex align-items-center gap-2">
              <div class="color-circle border rounded-circle"></div>
              <span><%= producto.variante[0].color %></span>
            </div>
          </div>
        <% } %>

        <!-- Talla -->
        <% if (producto.variante && producto.variante[0] && producto.variante[0].talla) { %>
          <div class="mb-3">
            <label class="form-label fw-semibold">Talla</label>
            <div class="badge bg-dark fs-6 px-3 py-2"><%= producto.variante[0].talla %></div>
          </div>
        <% } %>

        <!-- Cantidad -->
        <% if (producto.variante && producto.variante[0]) { %>
          <div class="mb-3">
            <label class="form-label fw-semibold">Cantidad</label>
            <div class="input-group" style="max-width: 150px;">
              <button class="btn btn-outline-secondary" type="button" id="decrease">-</button>
              <input type="number" id="cantidad" class="form-control text-center"
                     min="1" max="<%= producto.variante[0].stock %>" value="1">
              <button class="btn btn-outline-secondary" type="button" id="increase">+</button>
            </div>
            <small class="text-muted">Máx. <%= producto.variante[0].stock %> unidades</small>
          </div>
        <% } %>

        <!-- Botón agregar al carrito -->
<!-- Formulario agregar al carrito -->
<form action="/carrito/agregar" method="POST" class="d-grid">
  <!-- Datos ocultos del producto -->
  <input type="hidden" name="productoId" value="<%= producto._id %>">
  <input type="hidden" name="nombre" value="<%= producto.nombre %>">
  <input type="hidden" name="precio" value="<%= producto.variante && producto.variante[0] ? producto.variante[0].precio : 0 %>">
  <input type="hidden" name="imagen" value="<%= Array.isArray(producto.imagenUrl) ? (producto.imagenUrl.length>0 ? producto.imagenUrl[0] : '/img/placeholder.webp') : (producto.imagenUrl || '/img/placeholder.webp') %>">

  <!-- Campo cantidad -->
  <input type="hidden" id="cantidadInput" name="cantidad" value="1">

  <!-- Botón -->
  <button type="submit" class="btn btn-dark btn-lg">Agregar al carrito</button>
</form>

      </div>
    </div>
  </main>


  <!--Modal 1 - Login-->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="form-container" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <p class="title">Bienvenido</p>
          <% if (typeof success !=='undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
              <% if (typeof error !=='undefined' && error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>
                  <form method="post" action="/login" class="form" id="loginForm" novalidate>
                    <div class="mb-3">
                      <input id="email" type="email"
                        class="input form-control <%= (typeof errorField !== 'undefined' && errorField === 'email') ? 'is-invalid' : '' %>"
                        placeholder="Email" name="email"
                        value="<%= (typeof formData !== 'undefined' && formData.email) ? formData.email : '' %>"
                        required>
                      <div class="invalid-feedback" id="email-error">
                        <% if (typeof errorField !=='undefined' && errorField==='email' ) { %>
                          <%= error %>
                            <% } else { %>
                              Por favor, ingrese un correo válido.
                              <% } %>
                      </div>
                    </div>
                    <div class="mb-3">
                      <input id="password" type="password"
                        class="input form-control <%= (typeof errorField !== 'undefined' && errorField === 'password') ? 'is-invalid' : '' %>"
                        placeholder="Contraseña" name="password" required minlength="6">
                      <div class="invalid-feedback" id="password-error">
                        <% if (typeof errorField !=='undefined' && errorField==='password' ) { %>
                          <%= error %>
                            <% } else { %>
                              La contraseña debe tener al menos 6 caracteres.
                              <% } %>
                      </div>
                    </div>
                    <!-- reCAPTCHA v2 -->
                    <%- include('../partials/recaptcha-widget') %>
                    <button type='submit' id="iniciarsesion" class="btn btn-primary w-100">
                      <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                      <span class="button-text">Iniciar Sesión</span>
                    </button>
                  </form>
                  <div class="text-center mt-3">
                    <a href="#" class="text-muted small" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal" data-bs-dismiss="modal">
                      ¿Olvidaste tu contraseña?
                    </a>
                  </div>
                  <p class="sign-up-label">
                    No tienes cuenta? <a href="" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><span
                        class="sign-up-link"> Registrate</span></a>
                  </p>
                  <div class="buttons-container">
                    <div class="google-login-button">
                      <svg stroke="currentColor" fill="currentColor" stroke-width="0" version="1.1" x="0px" y="0px"
                        class="google-icon" viewBox="0 0 48 48" height="1em" width="1em"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12
    c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24
    c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path>
                        <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657
    C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path>
                        <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36
    c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path>
                        <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571
    c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z">
                        </path>
                      </svg>
                      <span>Iniciar con Google</span>
                    </div>
                  </div>
        </div>
      </div>
    </div>
  </div>

  <!--Modal 2 - Registro-->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form class="form" method="post" action="/register" id="registerForm" novalidate>
          <p class="title2">Registrarse </p>
          <% if (typeof successRegister !== 'undefined' && successRegister) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= successRegister %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          <% if (typeof errorRegister !== 'undefined' && errorRegister) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= errorRegister %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          <p class="message">Regístrese ahora y obtenga acceso completo a nuestra aplicación. </p>
          <div class="flex">
            <label>
              <input required="true" placeholder="" type="text" class="input form-control <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'nombre') ? 'is-invalid' : '' %>" name="nombre" value="<%= (typeof regFormData !== 'undefined' && regFormData.nombre) ? regFormData.nombre : '' %>">
              <span>Nombre</span>
              <div class="invalid-feedback"> <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'nombre' && typeof errorRegister !== 'undefined' && errorRegister) ? errorRegister : 'El nombre es obligatorio (mínimo 3 caracteres).' %></div>
            </label>

            <label>
              <input required="true" placeholder="" type="email" class="input form-control <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'email') ? 'is-invalid' : '' %>" name="email" value="<%= (typeof regFormData !== 'undefined' && regFormData.email) ? regFormData.email : '' %>">
              <span>Email</span>
              <div class="invalid-feedback"> <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'email' && typeof errorRegister !== 'undefined' && errorRegister) ? errorRegister : 'Ingresa un email válido.' %></div>
            </label>
          </div>

          <label>
            <input required="true" placeholder="" type="text" class="input form-control <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'telefono') ? 'is-invalid' : '' %>" name="telefono" value="<%= (typeof regFormData !== 'undefined' && regFormData.telefono) ? regFormData.telefono : '' %>">
            <span>Telefono</span>
            <div class="invalid-feedback"> <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'telefono' && typeof errorRegister !== 'undefined' && errorRegister) ? errorRegister : 'Ingrese un teléfono válido.' %></div>
          </label>

          <label>
            <input required="true" placeholder="" type="password" class="input form-control <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'password') ? 'is-invalid' : '' %>" name="password" minlength="8">
            <span>Contraseña</span>
            <div class="invalid-feedback"> <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'password' && typeof errorRegister !== 'undefined' && errorRegister) ? errorRegister : 'La contraseña debe tener mínimo 8 caracteres.' %></div>
          </label>
          <label>
            <input required="true" placeholder="" type="password" class="input form-control" name="confirmPassword" id="confirmPassword">
            <span>Confirmar Contraseña</span>
            <div class="invalid-feedback">Las contraseñas no coinciden.</div>
          </label>
          <!-- reCAPTCHA v2 para registro -->
          <%- include('../partials/recaptcha-widget-register') %>
          <button class="submit">Registrarse</button>
          <p class="signin">Ya tienes una cuenta ? <a href="" data-bs-toggle="modal"
              data-bs-target="#exampleModal">Iniciar sesion</a> </p>
        </form>
      </div>
    </div>
  </div>

  <!-- Incluir modal de recuperación de contraseña -->
  <%- include('../partials/forgot-password-modal') %>

  <!--Footer-->
  <footer class="footer fixed-bottom ">
    <div class="container">
      <p>&copy; 2025 JESSKA. Todos los derechos reservados.</p>
    </div>
  </footer>
  <!-- JS Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/detalleProducto.js"></script>
  <script src="/js/script.landing.js"></script>
</body>

</html>
