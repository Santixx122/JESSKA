<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= producto.nombre %> | JESSKA</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Iconos -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <!-- CSS personalizado -->
    <link rel="stylesheet" href="/css/catalogo.css">
    <link rel="stylesheet" href="/css/style.landing.css">
</head>

<body>
  <!-- Header -->
  <header>
    <nav class="navbar navbar-expand-lg fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">JESSKA</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mx-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/catalogo">Catalogo</a>
            </li>
          </ul>
          <div class="d-flex align-items-center">
            <a href="/carrito" class="cart-icon">
              <img src="/img/carrito-compras.svg" alt="Carrito">
            </a>
            <% if (typeof usuario !=='undefined' && usuario) { %>
              <div class="d-flex align-items-center gap-2 ms-3">
                <a href="/perfil" class="user-profile-link">Hola, <strong>
                    <%= usuario.nombre || usuario.email %>
                  </strong></a>
                <form method="post" action="/logout" class="m-0">
                  <button type="submit" class="btn-profile">Cerrar sesión</button>
                </form>
              </div>
              <% } else { %>
                <button type="button" class="btn-login ms-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                  Iniciar Sesión
                </button>
                <% } %>
          </div>
        </div>
      </div>
    </nav>
  </header>
  <!-- Contenido principal -->
  <main class="container mt-5 pt-5">
    <div class="row g-5">
      <!-- Imagen -->
      <div class="col-md-6 text-center">
<img src="<%= Array.isArray(producto.imagenUrl) ? (producto.imagenUrl.length>0 ? producto.imagenUrl[0] : '/img/placeholder.webp') : (producto.imagenUrl || '/img/placeholder.webp') %>"             alt="<%= producto.nombre %>"
             class="img-fluid rounded shadow-sm">
      </div>

      <!-- Información del producto -->
      <div class="col-md-6">
        <h2 class="fw-bold"><%= producto.nombre %></h2>
        
        <!-- Precio -->
        <p class="fs-3 text-primary fw-semibold mb-1">
          $<%= producto.variante && producto.variante[0] ? producto.variante[0].precio.toLocaleString('es-CO') : 'N/A' %>
        </p>
        
        <!-- Descripción -->
        <p class="text-muted"><%= producto.descripcion || 'Sin descripción disponible' %></p>

        <!-- Stock -->
        <% if (producto.variante && producto.variante[0]) { %>
          <p>En stock: <strong><%= producto.variante[0].stock %></strong></p>
        <% } %>

        <!-- Color -->
        <% if (producto.variante && producto.variante[0] && producto.variante[0].color) { %>
          <div class="mb-3">
            <label class="form-label fw-semibold">Color</label>
            <div class="d-flex align-items-center gap-2">
              <div class="color-circle border rounded-circle"></div>
              <span><%= producto.variante[0].color %></span>
            </div>
          </div>
        <% } %>

        <!-- Talla -->
        <% if (producto.variante && producto.variante[0] && producto.variante[0].talla) { %>
          <div class="mb-3">
            <label class="form-label fw-semibold">Talla</label>
            <div class="badge bg-dark fs-6 px-3 py-2"><%= producto.variante[0].talla %></div>
          </div>
        <% } %>

        <!-- Cantidad -->
        <% if (producto.variante && producto.variante[0]) { %>
          <div class="mb-3">
            <label class="form-label fw-semibold">Cantidad</label>
            <div class="input-group" style="max-width: 150px;">
              <button class="btn btn-outline-secondary" type="button" id="decrease">-</button>
              <input type="number" id="cantidad" class="form-control text-center"
                     min="1" max="<%= producto.variante[0].stock %>" value="1">
              <button class="btn btn-outline-secondary" type="button" id="increase">+</button>
            </div>
            <small class="text-muted">Máx. <%= producto.variante[0].stock %> unidades</small>
          </div>
        <% } %>

        <!-- Botón agregar al carrito -->
<!-- Formulario agregar al carrito -->
<form action="/carrito/agregar" method="POST" class="d-grid">
  <!-- Datos ocultos del producto -->
  <input type="hidden" name="productoId" value="<%= producto._id %>">
  <input type="hidden" name="nombre" value="<%= producto.nombre %>">
  <input type="hidden" name="precio" value="<%= producto.variante && producto.variante[0] ? producto.variante[0].precio : 0 %>">
  <input type="hidden" name="imagen" value="<%= Array.isArray(producto.imagenUrl) ? (producto.imagenUrl.length>0 ? producto.imagenUrl[0] : '/img/placeholder.webp') : (producto.imagenUrl || '/img/placeholder.webp') %>">

  <!-- Campo cantidad -->
  <input type="hidden" id="cantidadInput" name="cantidad" value="1">

  <!-- Botón -->
  <button type="submit" class="btn btn-dark btn-lg">Agregar al carrito</button>
</form>

      </div>
    </div>
  </main>


  <!--Footer-->
  <footer class="footer fixed-bottom ">
    <div class="container">
      <p>&copy; 2025 JESSKA. Todos los derechos reservados.</p>
    </div>
  </footer>
  <!-- JS Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/detalleProducto.js"></script>
  <script src="/js/script.landing.js"></script>
</body>

</html>
