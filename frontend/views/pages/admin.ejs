<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Signika:wght@300..700&display=swap"
        rel="stylesheet">
    <!--boostrap styles-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <!--splide.js styles-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">
    <!--styles-->
    <link rel="stylesheet" href="/css/style.admin.css">
    <title>JESSKA ADMIN</title>
</head>

<body>
    <!--nav bar-->
    <header>
        <nav class="nav-admin">
            <div class="content-nav-admin">
                <div class="tittle-nav-admin">
                    <h2><strong>JESSKA</strong></h2>
                </div>
                <div class="btn-admin-close-session">
                    <a href="/">
                        <button class="Btn" id="closeAdmin">
                            <span class="sign"><svg viewBox="0 0 512 512">
                                    <path
                                        d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z">
                                    </path>
                                </svg></span>
                            <span class="text">Salir</span>
                        </button>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <!--Contenido global-->
    <div class="global-content-admin">
        <!--contenido lateral-->
        <div id="sidebar" class="lateral-content-admin col-md-3 col-lg-2 d-md-block sidebar">
            <h4>Menu</h4>
            <ul>
                <li class="lateral-content-list nav-item">
                    <button class="cta nav-button" data-target="dashboard">
                        <span>Dashboard</span>
                        <svg width="15px" height="10px" viewBox="0 0 13 10">
                            <path d="M1,5 L11,5"></path>
                            <polyline points="8 1 12 5 8 9"></polyline>
                        </svg>
                    </button>
                </li>
                <li class="lateral-content-list nav-item">
                    <button class="cta nav-button" data-target="productos">
                        <span>Productos</span>
                        <svg width="15px" height="10px" viewBox="0 0 13 10">
                            <path d="M1,5 L11,5"></path>
                            <polyline points="8 1 12 5 8 9"></polyline>
                        </svg>
                    </button>
                </li>
                <li class="lateral-content-list nav-item">
                    <button class="cta nav-button" data-target="Usuarios">
                        <span>Usuarios</span>
                        <svg width="15px" height="10px" viewBox="0 0 13 10">
                            <path d="M1,5 L11,5"></path>
                            <polyline points="8 1 12 5 8 9"></polyline>
                        </svg>
                    </button>
                </li>
                <li class="lateral-content-list nav-item">
                    <button class="cta nav-button" data-target="Pedidos">
                        <span>Pedidos</span>
                        <svg width="15px" height="10px" viewBox="0 0 13 10">
                            <path d="M1,5 L11,5"></path>
                            <polyline points="8 1 12 5 8 9"></polyline>
                        </svg>
                    </button>
                </li>
                <li class="lateral-content-list nav-item">
                    <button class="cta nav-button" data-target="Categorias">
                        <span>Categorias</span>
                        <svg width="15px" height="10px" viewBox="0 0 13 10">
                            <path d="M1,5 L11,5"></path>
                            <polyline points="8 1 12 5 8 9"></polyline>
                        </svg>
                    </button>
                </li>
                <li class="lateral-content-list nav-item">
                    <button class="cta nav-button" data-target="Marcas">
                        <span>Marcas</span>
                        <svg width="15px" height="10px" viewBox="0 0 13 10">
                            <path d="M1,5 L11,5"></path>
                            <polyline points="8 1 12 5 8 9"></polyline>
                        </svg>
                    </button>
                </li>
            </ul>
        </div>
        <!--Contenido Principal-->
        <div id="dashboard" class="content section active">
            <div class="headerContent col-md-6">
                <h2>Bienvenido al panel de Administrador</h2>
            </div>
            <div class="bodyContent">
                <div class="dataInfo">
                    <div class="contenidoTargets">
                        <h4>Ventas</h4>
                        <p>
                            <%= pedidos.length %> Ventas realizadas
                        </p>
                    </div>
                </div>
                <div class="dataInfo">
                    <div class="contenidoTargets">
                        <h4>Usuarios</h4>
                        <p>
                            <%= usuario.length %> Usuarios registrados
                        </p>
                    </div>
                </div>
                <div class="dataInfo">
<div class="contenidoTargets">
    <h4>Ganancias</h4>
    <p>$ <%= ganancias.toLocaleString() %></p>
</div>
                </div>
                <div class="dataInfo">
                    <div class="contenidoTargets">
                        <h4>Productos stock</h4>
                        <p><%= stockTotal %></p>
                    </div>
                </div>
            </div>
            <!-- Gráficas -->
            <section class="general-content-graficas">
                <div class="general-grafico col-md-6">
                    <div class="grafico">
                        <div class="header-grafico">Ventas del Mes</div>
                        <canvas id="myChart" class="grafica"></canvas>
                    </div>
                </div>
                <div class="general-grafico col-md-6">
                    <div class="grafico">
                        <div class="header-grafico">Usuarios del Mes</div>
                        <canvas id="myChart2" class="grafica"></canvas>
                    </div>
                </div>
            </section>
        </div>
        <!-- Productos -->
        <div id="productos" class="section products-clients">
            <h2>Productos</h2>
            <table class="list-style" id="tabla-productos">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Color</th>
                        <th>Talla</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(function(producto){ %>
                        <tr>
                            <td>
                                <%= producto.nombre %>
                            </td>
                            <td>
                                <%= producto.descripcion %>
                            </td>
                            <% producto.variante.forEach(function(v){ %>
                                <td>
                                    <%= v.color %>
                                </td>
                                <td>
                                    <%= v.talla %>
                                </td>
                                <td>
                                    <%= v.precio %>
                                </td>
                                <td>
                                    <%= v.stock %>
                                </td>
                                <% }) %>
                                    <% if(producto.estado==='activo' ){ %>
                                        <td>
                                            <span class="badge rounded-pill bg-success">
                                                <%= producto.estado %>
                                            </span>
                                        </td>
                                        <% }else if(producto.estado==='inactivo' ){ %>
                                            <td>
                                                <span class="badge rounded-pill bg-secondary">
                                                    <%= producto.estado %>
                                                </span>
                                            </td>
                                            <% }else{ %>
                                                <td>
                                                    <span class="badge rounded-pill bg-danger">
                                                        <%= producto.estado %>
                                                    </span>
                                                </td>
                                                <% } %>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <button type="button"
                                                                class="btn btn-sm btn-outline-primary btn-editar"
                                                                data-type="producto" data-id="<%= producto._id %>"
                                                                data-nombre="<%= producto.nombre %>"
                                                                data-color="<%= producto.variante[0].color %>"
                                                                data-descripcion="<%= producto.descripcion %>"
                                                                data-talla="<%= producto.variante[0].talla %>"
                                                                data-precio="<%= producto.variante[0].precio %>"
                                                                data-stock="<%= producto.variante[0].stock %>"
                                                                data-estado="<%= producto.estado %>"
                                                                data-visible="<%= producto.visible %>">
                                                                <i class="fas fa-edit"></i> Editar
                                                            </button>
                                                            <button type="button"
                                                                class="btn btn-sm btn-outline-danger btn-eliminar"
                                                                data-id="<%= producto._id %>">
                                                                <i class="fas fa-trash"></i> Eliminar
                                                            </button>
                                                        </div>
                                                    </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <!-- Paginación de productos -->
            <nav>
                <ul class="pagination justify-content-center" id="paginacion-productos"></ul>
            </nav>
            <button class="agregar-btn" data-bs-toggle="modal" data-bs-target="#modalCrearProducto">Agregar
                Producto</button>
        </div>

        <!-- Usuarios -->
        <div id="Usuarios" class="section products-clients">
            <h2>Usuarios</h2>
            <table class="list-style" id="tabla-usuarios">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Telefono</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% usuario.forEach(function(usuarios){ %>
                        <tr>
                            <td>
                                <button class="btn btn-sm btn-secondary copiar-btn" data-id="<%= usuarios._id %>">
                                    Copiar
                                </button>
                            </td>
                            <td>
                                <%= usuarios.nombre %>
                            </td>
                            <td>
                                <%= usuarios.email %>
                            </td>
                            <td>
                                <%= usuarios.telefono %>
                            </td>
                            <td>
                                <%= usuarios.rol %>
                            </td>
                            <td>
                                <%= usuarios.estado %>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-primary btn-editar"
                                        data-type="usuario" data-id="<%= usuarios._id %>"
                                        data-nombre="<%= usuarios.nombre %>" data-email="<%= usuarios.email %>"
                                        data-telefono="<%= usuarios.telefono %>">
                                        <i class="fas fa-edit"></i> Editar
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger btn-eliminar"
                                        data-producto-index="" data-id="<%= usuarios._id %>">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <!-- Paginación de usuarios -->
            <nav>
                <ul class="pagination justify-content-center" id="paginacion-usuarios"></ul>
            </nav>
            <button class="agregar-btn" data-bs-toggle="modal" data-bs-target="#modalCrearUsuario">Agregar
                Usuario</button>
        </div>

        <!-- Pedidos -->
        <div id="Pedidos" class="section products-clients">
            <h2>Pedidos</h2>
            <table class="list-style" id="tabla-pedidos">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Fecha Creacion</th>
                        <th>Total</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% pedidos.forEach(function(pedido){ %>
                        <tr>
                            <td>
                                <%= pedido.clienteId %>
                            </td>
                            <td>
                                <%= pedido.fechaCreacion %>
                            </td>
                            <td>
                                <%= pedido.total %>
                            </td>
                            <td>
                                <%= pedido.estado %>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-primary btn-editar"
                                        data-type="pedidos" data-id="<%= pedido._id %>"
                                        data-clienteId="<%= pedido.clienteId %>"
                                        data-fechaCreacion="<%= pedido.fechaCreacion %>" data-total="<%= pedido.total %>"
                                        data-estado="<%= pedido.estado %>">
                                        <i class="fas fa-edit"></i> Editar
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger btn-eliminar"
                                        data-producto-index="" data-id="<%= pedido._id %>">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <!-- Paginación de pedidos -->
            <nav>
                <ul class="pagination justify-content-center" id="paginacion-pedidos"></ul>
            </nav>
            <button class="agregar-btn"  data-bs-toggle="modal" data-bs-target="#modalCrearPedido">Agregar Pedido</button>
        </div>


        <!--Categorias-->
        <div id="Categorias" class="section products-clients">
            <h2>Categorias</h2>
            <table class="list-style" id="tabla-categorias">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% categorias.forEach(function(p){ %>
                        <tr>
                            <td>
                                <button class="btn btn-sm btn-secondary copiar-btn" data-id="<%= p._id %>">
                                    Copiar
                                </button>
                            </td>
                            <td>
                                <%= p.nombre %>
                            </td>
                            <td>
                                <%= p.descripcion %>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-primary btn-editar"
                                        data-type="categoria" data-id="<%= p._id %>" data-nombre="<%= p.nombre %>"
                                        data-descripcion="<%= p.descripcion %>">
                                        <i class="fas fa-edit"></i> Editar
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger btn-eliminar"
                                        data-producto-index="" data-id="<%= p._id %>">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <!-- Paginación de categorias -->
            <nav>
                <ul class="pagination justify-content-center" id="paginacion-categorias"></ul>
            </nav>
            <button class="agregar-btn" data-bs-toggle="modal" data-bs-target="#modalCrearCategoria">Agregar
                categoria</button>
        </div>

        <!--Marcas-->

        <div id="Marcas" class="section products-clients">
            <h2>Marcas</h2>
            <table class="list-style" id="tabla-marcas">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% marcas.forEach(function(p){ %>
                        <tr>
                            <td>
                                <button class="btn btn-sm btn-secondary copiar-btn" data-id="<%= p._id %>">
                                    Copiar
                                </button>
                            </td>
                            <td>
                                <%= p.nombre %>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-primary btn-editar"
                                        data-type="marca" data-id="<%= p._id %>" data-nombre="<%= p.nombre %>">
                                        <i class="fas fa-edit"></i> Editar
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger btn-eliminar"
                                         data-id="<%= p._id %>">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <!-- Paginación de marcas -->
            <nav>
                <ul class="pagination justify-content-center" id="paginacion-marcas"></ul>
            </nav>
            <button class="agregar-btn" data-bs-toggle="modal" data-bs-target="#modalCrearMarca">Agregar
                marca</button>
        </div>

        <!--MODAL PRODUCTOS-->

        <div class="modal fade" id="modalCrearProducto" tabindex="-1" aria-labelledby="modalCrearProductoLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalCrearProductoLabel">Crear Nuevo Producto</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
<form action="/api/admin/productos" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="nombre" class="form-label">Nombre *</label>
                                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="categoria" class="form-label">Categoría *</label>
                                        <select class="form-select" id="categoria" name="categoriaId" required>
                                            <option value="">Seleccionar categoría</option>
                                            <% categorias.forEach(function(p){ %>
                                                <option value="<%= p._id %>"><%= p.nombre %></option>
                                            <% }) %>
                                        </select>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="marca" class="form-label">Marca *</label>
                                        <select class="form-select" id="marca" name="marcaId" required>
                                            <option value="">Seleccionar marca</option>
                                            <% marcas.forEach(function(p){ %>
                                                <option value="<%= p._id %>"><%= p.nombre %></option>
                                            <% }) %>
                                        </select>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="color" class="form-label">Color *</label>
                                        <input type="text" class="form-control" id="color" name="color" required>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="descripcion" class="form-label">Descripción *</label>
                                <textarea class="form-control" id="descripcion" name="descripcion" rows="3" required></textarea>
                                <div class="invalid-feedback"></div>
                            </div>

                            <div class="mb-3">
                                <label for="imagen" class="form-label">Imagen del Producto</label>
                                <input class="form-control" type="file" id="imagen" name="imagen" accept="image/png, image/jpeg, image/jpg">
                                <div class="invalid-feedback"></div>
                            </div>

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label for="talla" class="form-label">Talla *</label>
                                        <select class="form-select" id="talla" name="talla" required>
                                            <option value="">Talla</option>
                                            <option value="35">35</option>
                                            <option value="36">36</option>
                                            <option value="37">37</option>
                                            <option value="38">38</option>
                                            <option value="39">39</option>
                                            <option value="40">40</option>
                                            <option value="41">41</option>
                                            <option value="42">42</option>
                                            <option value="43">43</option>
                                            <option value="44">44</option>
                                            <option value="45">45</option>
                                        </select>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label for="precio" class="form-label">Precio *</label>
                                        <input type="number" class="form-control" id="precio" name="precio" min="0" step="0.01" required>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label for="stock" class="form-label">Stock *</label>
                                        <input type="number" class="form-control" id="stock" name="stock" min="0" required>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label for="estado" class="form-label">Estado</label>
                                        <select class="form-select" id="estado" name="estado">
                                            <option value="activo">Activo</option>
                                            <option value="agotado">Agotado</option>
                                            <option value="inactivo">Inactivo</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="visible" name="visible" checked>
                                    <label class="form-check-label" for="visible">
                                        Visible en catálogo
                                    </label>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">
                                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                                    Crear Producto
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <!--Modal usuarios-->
        <div class="modal fade" id="modalCrearUsuario" tabindex="-1" aria-labelledby="modalCrearUsuarioLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalCrearUsuarioLabel">Crear Nuevo Usuario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/crearUsuario" method="post" id="formCrearUsuario">
                            <div class="row">
                                <div class="col-md-6">
