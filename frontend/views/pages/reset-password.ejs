<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nueva Contraseña - JESSKA</title>
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.landing.css">
  <link rel="stylesheet" href="/css/reset.password.css">
</head>

<body>
  <div class="reset-container">
    <div class="reset-card">
      <div class="reset-header">
        <h3><i class="fas fa-key me-2"></i>Nueva Contraseña</h3>
        <p class="mb-0">Ingresa tu nueva contraseña</p>
      </div>
      
      <div class="reset-body">
        <!-- Mostrar errores si los hay -->
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <%= error %>
          </div>
        <% } %>
        
        <form action="/reset-password/<%= token %>" method="POST">
          <div class="mb-3">
            <div class="form-floating">
              <input 
                type="password" 
                class="form-control <% if (typeof errorField !== 'undefined' && errorField === 'password') { %>is-invalid<% } %>" 
                id="password" 
                name="password" 
                placeholder="Nueva contraseña"
                required
                minlength="8"
              >
              <label for="password">Nueva Contraseña</label>
              <% if (typeof errorField !== 'undefined' && errorField === 'password') { %>
                <div class="invalid-feedback">
                  <%= error %>
                </div>
              <% } %>
            </div>
            <div class="password-requirements">
              <i class="fas fa-lock me-1"></i>
              La contraseña debe tener al menos 8 caracteres
            </div>
          </div>
          
          <div class="mb-4">
            <div class="form-floating">
              <input 
                type="password" 
                class="form-control <% if (typeof errorField !== 'undefined' && errorField === 'confirmPassword') { %>is-invalid<% } %>" 
                id="confirmPassword" 
                name="confirmPassword" 
                placeholder="Confirmar contraseña"
                required
                minlength="8"
              >
              <label for="confirmPassword">Confirmar Contraseña</label>
              <% if (typeof errorField !== 'undefined' && errorField === 'confirmPassword') { %>
                <div class="invalid-feedback">
                  <%= error %>
                </div>
              <% } %>
            </div>
          </div>
          
          <button type="submit" class="btn btn-reset btn-primary w-100">
            <i class="fas fa-save me-2"></i>
            Cambiar Contraseña
          </button>
        </form>
        
        <div class="back-link">
          <a href="/">
            <i class="fas fa-arrow-left me-1"></i>
            Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/reset.password.js"></script>
  
</body>
</html>