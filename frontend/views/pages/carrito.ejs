<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!--google fonts-->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Signika:wght@300..700&display=swap"
    rel="stylesheet">
  <!--bootstrap styles-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
  <!--styles-->
  <link rel="stylesheet" href="css/style.landing.css">
  <link rel="stylesheet" href="css/style.carrito.css">
  <title>Tu Carrito - JESSKA</title>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">JESSKA</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mx-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#productos">Productos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/catalogo">Catálogo</a>
            </li>
          </ul>

          <div class="d-flex align-items-center">
            <a href="/carrito" class="cart-icon">
              <img src="img/carrito-compras.svg" alt="Carrito">
            </a>

            <% if (typeof usuario !=='undefined' && usuario) { %>
              <div class="d-flex align-items-center gap-2 ms-3">
                <a href="/perfil" class="user-profile-link">Hola, <strong>
                    <%= usuario.nombre || usuario.email %>
                  </strong></a>
                <form method="post" action="/logout" class="m-0">
                  <button type="submit" class="btn-profile">Cerrar sesión</button>
                </form>
              </div>
              <% } else { %>
                <button type="button" class="btn-login ms-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                  Iniciar Sesión
                </button>
                <% } %>
          </div>
        </div>
      </div>
    </nav>
  </header>
  <!--Modal 1-->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="form-container" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <p class="title">Bienvenido</p>
          <% if (typeof success !=='undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
              <% if (typeof error !=='undefined' && error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>
                  <form method="post" action="/login" class="form" id="loginForm" novalidate>
                    <div class="mb-3">
                      <input id="email" type="email"
                        class="input form-control <%= (typeof errorField !== 'undefined' && errorField === 'email') ? 'is-invalid' : '' %>"
                        placeholder="Email" name="email"
                        value="<%= (typeof formData !== 'undefined' && formData.email) ? formData.email : '' %>"
                        required>
                      <div class="invalid-feedback" id="email-error">
                        <% if (typeof errorField !=='undefined' && errorField==='email' ) { %>
                          <%= error %>
                            <% } else { %>
                              Por favor, ingrese un correo válido.
                              <% } %>
                      </div>
                    </div>
                    <div class="mb-3">
                      <input id="password" type="password"
                        class="input form-control <%= (typeof errorField !== 'undefined' && errorField === 'password') ? 'is-invalid' : '' %>"
                        placeholder="Contraseña" name="password" required minlength="6">
                      <div class="invalid-feedback" id="password-error">
                        <% if (typeof errorField !=='undefined' && errorField==='password' ) { %>
                          <%= error %>
                            <% } else { %>
                              La contraseña debe tener al menos 6 caracteres.
                              <% } %>
                      </div>
                    </div>
                    <button type='submit' id="iniciarsesion" class="btn btn-primary w-100">
                      <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                      <span class="button-text">Iniciar Sesión</span>
                    </button>
                  </form>
                  <p class="sign-up-label">
                    No tienes cuenta? <a href="" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><span
                        class="sign-up-link"> Registrate</span></a>
                  </p>
                  <div class="buttons-container">
                    <div class="google-login-button">
                      <svg stroke="currentColor" fill="currentColor" stroke-width="0" version="1.1" x="0px" y="0px"
                        class="google-icon" viewBox="0 0 48 48" height="1em" width="1em"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12
    c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24
    c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path>
                        <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657
    C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path>
                        <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36
    c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path>
                        <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571
    c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z">
                        </path>
                      </svg>
                      <span>Iniciar con Google</span>
                    </div>
                  </div>
        </div>
      </div>
    </div>
  </div>
  <!--Modal 2-->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form class="form" method="post" action="/register" id="registerForm" novalidate>
          <p class="title2">Registrarse </p>
          <% if (typeof successRegister !=='undefined' && successRegister) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= successRegister %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
              <% if (typeof errorRegister !=='undefined' && errorRegister) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <%= errorRegister %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>
                  <p class="message">Regístrese ahora y obtenga acceso completo a nuestra aplicación. </p>
                  <div class="flex">
                    <label>
                      <input required="true" placeholder="" type="text"
                        class="input form-control <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'nombre') ? 'is-invalid' : '' %>"
                        name="nombre"
                        value="<%= (typeof regFormData !== 'undefined' && regFormData.nombre) ? regFormData.nombre : '' %>">
                      <span>Nombre</span>
                      <div class="invalid-feedback">
                        <%= (typeof errorRegisterField !=='undefined' && errorRegisterField==='nombre' && typeof
                          errorRegister !=='undefined' && errorRegister) ? errorRegister
                          : 'El nombre es obligatorio (mínimo 3 caracteres).' %>
                      </div>
                    </label>

                    <label>
                      <input required="true" placeholder="" type="email"
                        class="input form-control <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'email') ? 'is-invalid' : '' %>"
                        name="email"
                        value="<%= (typeof regFormData !== 'undefined' && regFormData.email) ? regFormData.email : '' %>">
                      <span>Email</span>
                      <div class="invalid-feedback">
                        <%= (typeof errorRegisterField !=='undefined' && errorRegisterField==='email' && typeof
                          errorRegister !=='undefined' && errorRegister) ? errorRegister : 'Ingresa un email válido.' %>
                      </div>
                    </label>
                  </div>

                  <label>
                    <input required="true" placeholder="" type="text"
                      class="input form-control <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'telefono') ? 'is-invalid' : '' %>"
                      name="telefono"
                      value="<%= (typeof regFormData !== 'undefined' && regFormData.telefono) ? regFormData.telefono : '' %>">
                    <span>Telefono</span>
                    <div class="invalid-feedback">
                      <%= (typeof errorRegisterField !=='undefined' && errorRegisterField==='telefono' && typeof
                        errorRegister !=='undefined' && errorRegister) ? errorRegister : 'Ingrese un teléfono válido.'
                        %>
                    </div>
                  </label>

                  <label>
                    <input required="true" placeholder="" type="password"
                      class="input form-control <%= (typeof errorRegisterField !== 'undefined' && errorRegisterField === 'password') ? 'is-invalid' : '' %>"
                      name="password" minlength="8">
                    <span>Contraseña</span>
                    <div class="invalid-feedback">
                      <%= (typeof errorRegisterField !=='undefined' && errorRegisterField==='password' && typeof
                        errorRegister !=='undefined' && errorRegister) ? errorRegister
                        : 'La contraseña debe tener mínimo 8 caracteres.' %>
                    </div>
                  </label>
                  <label>
                    <input required="true" placeholder="" type="password" class="input form-control"
                      name="confirmPassword" id="confirmPassword">
                    <span>Confirmar Contraseña</span>
                    <div class="invalid-feedback">Las contraseñas no coinciden.</div>
                  </label>
                  <button class="submit">Registrarse</button>
                  <p class="signin">Ya tienes una cuenta ? <a href="" data-bs-toggle="modal"
                      data-bs-target="#exampleModal">Iniciar sesion</a> </p>
        </form>
      </div>
    </div>
  </div>
  <main class="carrito-container">
    <div class="container mt-5 pt-5">
      <div class="row">

        <!-- Lista de productos -->
        <div class="col-lg-8">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Producto</th>
                <th class="text-center">Cantidad</th>
                <th class="text-center">Subtotal</th>
                <th class="text-end">Acciones</th>
              </tr>
            </thead>

            <tbody id="carrito-items">
              <% if (productosCarrito && productosCarrito.length> 0) { %>
                <% let total=0; %>
                  <% productosCarrito.forEach(prod=> {
                    total += prod.precio * prod.cantidad;
                    %>
                    <tr>
                      <!-- Producto -->
                      <td class="align-middle">
                        <div class="d-flex align-items-center">
                          <img src="<%= prod.imagen %>" alt="<%= prod.nombre %>" width="60" class="me-3 rounded">
                          <div>
                            <h6 class="mb-0">
                              <%= prod.nombre %>
                            </h6>
                            <small class="text-muted">$<%= prod.precio.toLocaleString('es-CO') %></small>
                          </div>
                        </div>
                      </td>

                      <!-- Cantidad -->
                      <td class="text-center align-middle">
                        <%= prod.cantidad %>
                      </td>

                      <!-- Subtotal -->
                      <td class="text-center align-middle">
                        $<%= (prod.precio * prod.cantidad).toLocaleString('es-CO') %>
                      </td>

                      <!-- Eliminar -->
                      <td class="text-end align-middle">
                        <form action="/carrito/eliminar" method="POST" class="d-inline">
                          <input type="hidden" name="productoId" value="<%= prod.id %>">
                          <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="4" class="text-center py-4">
                            <div class="carrito-vacio">
                              <h5 class="mb-2">Tu carrito está vacío</h5>
                              <a href="/catalogo" class="btn btn-primary">Explorar productos</a>
                            </div>
                          </td>
                        </tr>
                        <% } %>
            </tbody>
          </table>
        </div>

        <!-- Resumen de compra -->
        <div class="col-lg-4">
          <% if (productosCarrito && productosCarrito.length> 0) { %>
            <% let total=0; productosCarrito.forEach(prod=> { total += prod.precio * prod.cantidad });
              %>
              <div class="card shadow-sm">
                <div class="card-body">
                  <h5 class="card-title mb-3">Resumen de compra</h5>
                  <div class="d-flex justify-content-between mb-3">
                    <span>Total a pagar:</span>
                    <strong>$<%= total.toLocaleString('es-CO') %></strong>
                  </div>
                  <form action="/pagar" method="POST">
                    <% productosCarrito.forEach((prod, index)=> { %>
                      <input type="hidden" name="items[<%= index %>][id]" value="<%= prod.id %>">
                      <input type="hidden" name="items[<%= index %>][nombre]" value="<%= prod.nombre %>">
                      <input type="hidden" name="items[<%= index %>][cantidad]" value="<%= prod.cantidad %>">
                      <input type="hidden" name="items[<%= index %>][precio]" value="<%= prod.precio %>">
                      <% }) %>

                        <div id="walletBrick_container"></div>
                        <button type="submit" id="btnPagar" class="btn btn-dark w-100">Pagar</button>
                  </form>

                </div>
              </div>
              <% } %>
        </div>

      </div>
    </div>
  </main>



  <!-- Modal de login (si no está autenticado) -->
  <% if (typeof usuario==='undefined' || !usuario) { %>
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="loginModalLabel">Iniciar Sesión</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Inicia sesión para continuar con tu compra</p>
            <a href="/" class="btn btn-primary">Ir a inicio de sesión</a>
          </div>
        </div>
      </div>
    </div>
    <% } %>

      <!--bootstrap js-->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq"
        crossorigin="anonymous"></script>
      <!--font awesome-->
      <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
      <!--carrito js-->
      <script src="/js/carrito.js"></script>
      <script src="/js/script.landing.js"></script>
      <script src="https://sdk.mercadopago.com/js/v2"></script>

</body>

</html>